# ---------- Base Image ----------
FROM node:22-alpine AS base
WORKDIR /app
RUN corepack enable

# ---------- Dependencies ----------
FROM base AS deps
COPY pnpm-lock.yaml ./
COPY package.json ./
COPY pnpm-workspace.yaml ./
COPY apps/ui/package.json ./apps/ui/
COPY packages ./packages
RUN pnpm install --frozen-lockfile

# ---------- Build ----------
FROM base AS build
COPY --from=deps /app /app
# Copy the entire apps/ui source code
COPY apps/ui ./apps/ui
WORKDIR /app/apps/ui

RUN pnpm build

# ---------- Runtime ----------
FROM node:22-alpine AS runner
WORKDIR /app

# Create non-root user
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy built app
COPY --from=build --chown=nextjs:nodejs /app/apps/ui/.next/standalone ./
COPY --from=build --chown=nextjs:nodejs /app/apps/ui/.next/static ./apps/ui/.next/static
COPY --from=build --chown=nextjs:nodejs /app/apps/ui/public ./apps/ui/public

USER nextjs

EXPOSE 3000

ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

CMD ["node", "apps/ui/server.js"]